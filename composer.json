{
    "name": "hparadiz/technexus",
    "description": "Source code for technex.us",
    "type": "project",
    "require": {
	    "dwoo/dwoo": "^1.3",
	    "divergence/divergence": "dev-master",
        "filp/whoops": ">=2.1.14",
        "symfony/var-dumper": "^4.1@dev",
        "divergence/cli": "@dev"
    },
    "require-dev": {
	  	"friendsofphp/php-cs-fixer": "*"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../divergence",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../divergence-cli",
            "options": {
                "symlink": true
            }
        }
    ],
    "authors": [
        {
            "name": "Henry Paradiz",
            "email": "henry.paradiz@gmail.com"
        }
    ],
    "autoload": {
	    "psr-4": {
		    "technexus\\": "src"
	    }
    },
    "minimum-stability": "dev",
    "scripts": {
	    "fix-code": "php-cs-fixer fix"
    }
}
